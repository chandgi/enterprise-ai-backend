// .eslintrc.json
{
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "prettier/prettier": ["error", {
        "endOfLine": "auto"
      }]
    }
  }
  
  // .prettierrc
  {
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  }
  
  // jest.config.js
  module.exports = {
    testEnvironment: "node",
    setupFilesAfterEnv: ["<rootDir>/jest.setup.js"],
    testPathIgnorePatterns: ["/node_modules/"],
  };
  
  // jest.setup.js
  jest.setTimeout(30000);
  